<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.CodeVerificationController"
      prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Entrez le code de vérification" style="-fx-font-size: 16px;"/>
    <TextField fx:id="codeField" promptText="Code à 6 chiffres"/>
    <Button text="Vérifier" onAction="#handleVerify"/>
    <Label fx:id="statusLabel" textFill="red"/>

</VBox>
